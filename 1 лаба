#include<iostream>
#include <stdlib.h>
 
using namespace std;
 
int main() {
 
    int N,M,k=0;
    cout << "Введите размер матрицы n :" ; cin >> N;
    cout << "\nВведите размер матрицы m :"; cin >> M;
    int **mas=new int*[N];
    int *mas_j = new int [M];
    for (int i = 0; i < M; i++) {
        mas_j[i] = 0;
    }
    for (int i = 0; i < N; ++i)
        mas[i] = new int [M];
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < M; j++) {
            mas[i][j]=rand()%2 ;
            mas_j[j] += mas[i][j];
            cout<<mas[i][j]<<" ";
        }
        cout<<"\n";
    }
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < M; j++) { 
            if (mas[i][j] * 2 > mas_j[j] ) k++;
        } 
    }
 
    
    cout << "Особых элементов: " << k << endl;
    system("pause");
}
