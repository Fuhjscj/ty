#include <iostream>
#include <string.h>
using namespace std;
struct ATSInfo {
char data[10]; // Дата
int kod; // Код
char city[20]; // Город
long talkTime; // Время разговора (в секундах)
int tarif; // Тариф (стоимость минуты разговора)
char cityTelNumber[20]; // Номер телефона в городе
char abonentTelNumber[20]; // Номер телефона абонента
};
int main() {
int i=0;
struct ATSInfo information[100];
int kolZvonkov = 0;
char vubrCity[20];
long totalTime = 0, time = 0;
double sum = 0;
int tarif = 0;
cout << "Введите количество знаков: ";
cin >> kolZvonkov;
for (int i = 0; i < kolZvonkov; i++) {
cout << "Дата: ";
cin >> information[i].data;
cout << "Код: ";
cin >> information[i].kod;
cout << "Город: ";
cin >> information[i].city;
cout << "Время разговора (сек): ";
cin >> information[i].talkTime;
cout << "Тариф: ";
cin >> information[i].tarif;
cout << "Номер телефона в городе: ";
cin >> information[i].cityTelNumber;
cout << "Номер телефона абонента: ";
cin >> information[i].abonentTelNumber;
cout << "************************************" << endl;
}
cout << "\nВведите город для которого будем произведён расчёт: ";
cin >> vubrCity;
/* Подсчет для заданного города общего
времени разговоров с ним и суммы */
for (i = 0; i < kolZvonkov; i++) {
if (strcmp(vubrCity, information[i].city) == 0) {
time = information[i].talkTime;
tarif = information[i].tarif;
sum += (time / 60.0) * tarif;
totalTime += time;
}
}
cout << "\nОбщая информация о " << vubrCity << ":\n"<< endl;
cout << "Количество звонков: " << kolZvonkov << "." << endl;
cout << "Время разговора: " << totalTime << " секунд" << endl;
cout << "Сумма: " << sum << "руб." << endl;
return 0;
}
